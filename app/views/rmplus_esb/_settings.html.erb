  </tr>
  <tr>
    <td>
      <label for="settings_payslip_password"><%= l(:settings_resb_payslip_password) %></label>
    </td>
    <td>
      <%= password_field_tag('settings[payslip_password]',  @settings['payslip_password']) %>
    </td>
  </tr>
  <tr>
    <td>
      <label for="settings_payslip_password"><%= l(:settings_resb_attachment_vacation_path) %></label>
    </td>
    <td>
      <%= text_field_tag('settings[attachment_vacation_path]',  @settings['attachment_vacation_path']) %>
