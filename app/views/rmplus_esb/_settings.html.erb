  </tr>

  <tr class="rmp-settings-group">
    <td></td>
    <td>
      ESB
    </td>
  </tr>
  <tr>
    <td>
      <label for="settings_esb_url"><%= l(:settings_resb_esb_url) %></label>
    </td>
    <td>
      <%= text_field_tag 'settings[esb_url]', @settings['esb_url'] %>
    </td>
  </tr>
  <tr>
    <td>
      <label for="settings_esb_app_id"><%= l(:settings_resb_esb_app_id) %></label>
    </td>
