<table class="plugin_settings">
  <tr>
    <td>
      <label for="settings_trade_point_custom_indicator_id"><%= l(:settings_resb_trade_point_custom_indicator_id) %></label>
    </td>
    <td>
      <%= select_tag 'settings[trade_point_custom_indicator_id]', options_for_select(KpiCustomIndicator.order(:name).map { |ci| [ci.name, ci.id] }, @settings['trade_point_custom_indicator_id']), include_blank: true, class: 'select2' %>
    </td>
  </tr>
  <tr>
    <td>
      <label for="settings_employee_custom_indicator_id"><%= l(:settings_resb_employee_custom_indicator_id) %></label>
    </td>
