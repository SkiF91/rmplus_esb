      <%= select_tag 'settings[employee_custom_indicator_id]', options_for_select(KpiCustomIndicator.order(:name).map { |ci| [ci.name, ci.id] }, @settings['employee_custom_indicator_id']), include_blank: true, class: 'select2' %>
